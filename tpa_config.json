{
  "name": "Timer App",
  "description": "Timer, Stopwatch and Pomodoro functionalities",
  "appType": "standard",
  "permissions": [
    {
      "type": "MICROPHONE",
      "description": "Permission needed to activate Voice Commands to control the Timer Functions by Speech"
    }
  ],
  "settings": [
    {
      "type": "group",
      "key": "",
      "label": "",
      "title": "Genneral Settings"
    },
    {
      "type": "select",
      "key": "startup_mode",
      "label": "Initial Mode on Startup",
      "defaultValue": "menu",
      "options": [
        {
          "label": "Show Menu First",
          "value": "menu"
        },
        {
          "label": "Stopwatch",
          "value": "stopwatch"
        },
        {
          "label": "Timer",
          "value": "timer"
        },
        {
          "label": "Pomodoro",
          "value": "pomodoro"
        }
      ]
    },
    {
      "type": "select",
      "key": "control_input_method",
      "label": "Control Input Method",
      "defaultValue": "voice",
      "options": [
        {
          "label": "Voice Control (and App Control)",
          "value": "voice"
        },
        {
          "label": "App Control (Mic off)",
          "value": "app_external"
        }
      ]
    },
    {
      "type": "toggle",
      "key": "use_trigger_word_setting",
      "label": "Activate Trigger Word ('Mira')",
      "defaultValue": false
    },
    {
      "type": "select",
      "key": "show_hints_level",
      "label": "Detail Level for On-Screen Information",
      "options": [
        { "label": "Show Everything (State, Context, Hints)", "value": "show_all" },
        { "label": "Hide Hints Only", "value": "hide_hints_only" },
        { "label": "Hide Hints & Context", "value": "hide_hints_context" },
        { "label": "Hide All Details (State, Context, Hints)", "value": "hide_all_details" }
      ],
      "defaultValue": "show_all",
      "description": "Kies hoeveel informatie (status, context, spraakcommando hints) op het scherm wordt getoond."
    },
    {
      "type": "group",
      "key": "",
      "label": "",
      "title": "Timer Defaults"
    },
    {
      "key": "default_timer_duration_mmss",
      "label": "Default Timer Duration (MM:SS)",
      "type": "text",
      "defaultValue": "00:00",
      "description": "Set the default timer duration. Format: MM:SS (e.g., 01:30 for 1 minute and 30 seconds)."
    },
    {
      "type": "toggle",
      "key": "activate_timer_from_settings",
      "label": "Start/Stop Timer via Setting",
      "defaultValue": false
    },
    {
      "type": "group",
      "key": "",
      "label": "",
      "title": "Stopwatch Settings"
    },
    {
      "type": "toggle",
      "key": "stopwatch_auto_lap_enabled",
      "label": "Enable Auto-Lap",
      "defaultValue": false
    },
    {
      "type": "text",
      "key": "stopwatch_max_auto_lap_intervals",
      "label": "Max Auto-Laps (1-99)",
      "defaultValue": "5",
      "description": "Type the maximum number of auto-laps (1-99)."
    },
    {
      "type": "toggle",
      "key": "activate_stopwatch_from_settings",
      "label": "Start/Stop Stopwatch via Setting",
      "defaultValue": false
    },
    {
      "type": "group",
      "key": "",
      "label": "",
      "title": "Pomodoro Settings"
    },
    {
      "type": "select",
      "key": "pomodoro_work_duration_minutes",
      "label": "Pomodoro: Work Duration",
      "defaultValue": "25",
      "options": [
        {
          "label": "15 Minutes",
          "value": "15"
        },
        {
          "label": "20 Minutes",
          "value": "20"
        },
        {
          "label": "25 Minutes (Classic)",
          "value": "25"
        },
        {
          "label": "30 Minutes",
          "value": "30"
        },
        {
          "label": "45 Minutes",
          "value": "45"
        },
        {
          "label": "50 Minutes",
          "value": "50"
        }
      ]
    },
    {
      "type": "select",
      "key": "pomodoro_short_break_duration_minutes",
      "label": "Pomodoro: Short Break Duration",
      "defaultValue": "5",
      "options": [
        {
          "label": "3 Minutes",
          "value": "3"
        },
        {
          "label": "5 Minutes (Classic)",
          "value": "5"
        },
        {
          "label": "7 Minutes",
          "value": "7"
        },
        {
          "label": "10 Minutes",
          "value": "10"
        }
      ]
    },
    {
      "type": "select",
      "key": "pomodoro_long_break_duration_minutes",
      "label": "Pomodoro: Long Break Duration",
      "defaultValue": "15",
      "options": [
        {
          "label": "10 Minutes",
          "value": "10"
        },
        {
          "label": "15 Minutes (Classic)",
          "value": "15"
        },
        {
          "label": "20 Minutes",
          "value": "20"
        },
        {
          "label": "25 Minutes",
          "value": "25"
        },
        {
          "label": "30 Minutes",
          "value": "30"
        }
      ]
    },
    {
      "type": "select",
      "key": "pomodoro_intervals_before_long_break",
      "label": "Pomodoro: Work Intervals before Long Break",
      "defaultValue": "4",
      "options": [
        {
          "label": "2 Intervals",
          "value": "2"
        },
        {
          "label": "3 Intervals",
          "value": "3"
        },
        {
          "label": "4 Intervals (Classic)",
          "value": "4"
        },
        {
          "label": "5 Intervals",
          "value": "5"
        },
        {
          "label": "6 Intervals",
          "value": "6"
        }
      ]
    },
    {
      "type": "toggle",
      "key": "pomodoro_auto_start_breaks",
      "label": "Pomodoro: Auto-start Breaks",
      "defaultValue": true
    },
    {
      "type": "toggle",
      "key": "pomodoro_auto_start_work",
      "label": "Pomodoro: Auto-start Work Sessions",
      "defaultValue": true
    },
    {
      "type": "toggle",
      "key": "activate_pomodoro_from_settings",
      "label": "Start/Stop Pomodoro Cylce via Setting",
      "defaultValue": false
    }
  ],
  "tools": []
}