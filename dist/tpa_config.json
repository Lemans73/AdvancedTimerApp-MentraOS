{
  "name": "Hello Timer",
  "description": "A simple stopwatch and timer app by T073",
  "version": "1.0.3", 
  "settings": [
    {
      "type": "group",
      "title": "General Settings"
    },
    {
      "key": "startup_mode",
      "label": "Initial Mode on Startup",
      "type": "select",
      "options": [
        { "label": "Show Menu First", "value": "menu" },
        { "label": "Stopwatch", "value": "stopwatch" },
        { "label": "Timer", "value": "timer" },
        { "label": "Pomodoro", "value": "pomodoro" }
      ],
      "defaultValue": "menu"
    },
    {
      "key": "control_input_method",
      "label": "Control Input Method",
      "type": "select",
      "options": [
        { "label": "Voice Control (and App Control)", "value": "voice" },
        { "label": "App Control (Mic off)", "value": "app_external" } 
      ],
      "defaultValue": "voice"
    },
    {
      "key": "use_trigger_word_setting", 
      "label": "Activate Trigger Word ('Mira')",
      "type": "toggle",
      "defaultValue": false 
    },
    {
      "key": "show_hints", 
      "label": "Show/hide Hints on Screen",
      "type": "toggle",
      "defaultValue": true,
      "description": "Enable or Disable on Screen Hints for Voice Control."
    },
    {
      "type": "group",
      "title": "Timer Defaults"
    },
    {
      "key": "default_timer_duration_minutes",
      "label": "Default Timer Duration",
      "type": "select", 
      "options": [
        { "label": "1 Minute", "value": "1" },
        { "label": "5 Minutes", "value": "5" },
        { "label": "10 Minutes", "value": "10" },
        { "label": "15 Minutes", "value": "15" },
        { "label": "30 Minutes", "value": "30" },
        { "label": "60 Minutes", "value": "60" }
      ],
      "defaultValue": "5"
    },
    {
      "key": "activate_timer_from_settings", 
      "label": "Start/Stop Timer via Setting",
      "type": "toggle",
      "defaultValue": false,
      "description": "ON: Starts timer with Default Timer Duration. OFF: Stops timer and returns to menu."
    },
    {
      "type": "group",
      "title": "Stopwatch Settings" 
    },
    {
      "key": "stopwatch_auto_lap_enabled", 
      "label": "Enable Auto-Lap",
      "type": "toggle",
      "defaultValue": false
    },
    {
      "key": "stopwatch_auto_lap_interval_seconds", 
      "label": "Auto-Lap Interval",
      "type": "select",
      "options": [
        { "label": "30 Seconds", "value": "30" },
        { "label": "1 Minute", "value": "60" },
        { "label": "2 Minutes", "value": "120" },
        { "label": "5 Minutes", "value": "300" }
      ],
      "defaultValue": "60"
    },
    {
      "key": "stopwatch_max_auto_lap_intervals",
      "label": "Max Auto-Laps",
      "type": "select",
      "options": [
        { "label": "2 Rounds", "value": "2" },
        { "label": "3 Rounds", "value": "3" },
        { "label": "4 Rounds", "value": "4" },
        { "label": "5 Rounds", "value": "5" },
        { "label": "10 Rounds", "value": "10" },
        { "label": "Unlimited", "value": "99" } 
      ],
      "defaultValue": "99",
      "description": "Maximum auto-laps. Only active if 'Enable Auto-Lap' is ON."
    },    
    {
      "key": "activate_stopwatch_from_settings", 
      "label": "Start/Stop Stopwatch via Setting", 
      "type": "toggle",
      "defaultValue": false,
      "description": "ON: Starts stopwatch. OFF: Stops stopwatch and returns to menu."
    },    
    {
      "type": "group",
      "title": "Pomodoro Settings"
    },
    {
      "key": "pomodoro_work_duration_minutes",
      "label": "Pomodoro: Work Duration",
      "type": "select",
      "options": [
        { "label": "15 Minutes", "value": "15" },
        { "label": "20 Minutes", "value": "20" },
        { "label": "25 Minutes (Classic)", "value": "25" },
        { "label": "30 Minutes", "value": "30" },
        { "label": "45 Minutes", "value": "45" },
        { "label": "50 Minutes", "value": "50" }
      ],
      "defaultValue": "25",
      "description": "Duration of each focused work session in a Pomodoro cycle."
    },
    {
      "key": "pomodoro_short_break_duration_minutes",
      "label": "Pomodoro: Short Break Duration",
      "type": "select",
      "options": [
        { "label": "3 Minutes", "value": "3" },
        { "label": "5 Minutes (Classic)", "value": "5" },
        { "label": "7 Minutes", "value": "7" },
        { "label": "10 Minutes", "value": "10" }
      ],
      "defaultValue": "5",
      "description": "Duration of the short break after a Pomodoro work session."
    },
    {
      "key": "pomodoro_long_break_duration_minutes",
      "label": "Pomodoro: Long Break Duration",
      "type": "select",
      "options": [
        { "label": "10 Minutes", "value": "10" },
        { "label": "15 Minutes (Classic)", "value": "15" },
        { "label": "20 Minutes", "value": "20" },
        { "label": "25 Minutes", "value": "25" },
        { "label": "30 Minutes", "value": "30" }
      ],
      "defaultValue": "15",
      "description": "Duration of the long break after a set of Pomodoro work sessions."
    },
    {
      "key": "pomodoro_intervals_before_long_break",
      "label": "Pomodoro: Work Intervals before Long Break",
      "type": "select",
      "options": [
        { "label": "2 Intervals", "value": "2" },
        { "label": "3 Intervals", "value": "3" },
        { "label": "4 Intervals (Classic)", "value": "4" },
        { "label": "5 Intervals", "value": "5" },
        { "label": "6 Intervals", "value": "6" }
      ],
      "defaultValue": "4",
      "description": "Number of work sessions before a long break starts."
    },
    {
      "key": "pomodoro_auto_start_breaks",
      "label": "Pomodoro: Auto-start Breaks",
      "type": "toggle",
      "defaultValue": true,
      "description": "Automatically start breaks after a work session finishes."
    },
    {
      "key": "pomodoro_auto_start_work",
      "label": "Pomodoro: Auto-start Work Sessions",
      "type": "toggle",
      "defaultValue": true,
      "description": "Automatically start the next work session after a break finishes."
    },
    {
      "key": "activate_pomodoro_from_settings",
      "label": "Start/Stop Pomodoro Cylce via Setting",
      "type": "toggle",
      "defaultValue": false,
      "description": "ON: Starts a new Pomodoro cycle with current settings. OFF: Stops any active Pomodoro cycle and returns to menu."
    }
  ]
}
